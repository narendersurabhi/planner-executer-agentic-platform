[
  {
    "op": "add",
    "path": "/spec/template/spec/initContainers",
    "value": [
      {
        "name": "init-shared",
        "image": "busybox:1.36",
        "command": ["sh", "-c", "mkdir -p /shared/workspace /shared/artifacts"],
        "volumeMounts": [
          {
            "name": "shared-data",
            "mountPath": "/shared"
          }
        ]
      }
    ]
  },
  {
    "op": "replace",
    "path": "/spec/template/spec/volumes",
    "value": [
      {
        "name": "shared-data",
        "hostPath": {
          "path": "/var/awe-shared",
          "type": "DirectoryOrCreate"
        }
      }
    ]
  }
]
