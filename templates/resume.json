{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Resume",
  "type": "object",
  "additionalProperties": false,
  "required": ["full_name", "summary", "skills", "experience", "education"],
  "properties": {
    "full_name": { "type": "string" },
    "headline": { "type": "string" },
    "location": { "type": "string" },
    "phone": { "type": "string" },
    "email": { "type": "string" },
    "linkedin_url": { "type": "string" },
    "github_url": { "type": "string" },
    "summary": { "type": "string" },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "items"],
        "properties": {
          "name": { "type": "string" },
          "items": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "experience": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "company", "bullets"],
        "properties": {
          "title": { "type": "string" },
          "company": { "type": "string" },
          "location": { "type": "string" },
          "start_date": { "type": "string" },
          "end_date": { "type": "string" },
          "bullets": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["text"],
              "properties": {
                "text": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["degree", "institution"],
        "properties": {
          "degree": { "type": "string" },
          "institution": { "type": "string" },
          "location": { "type": "string" },
          "start_date": { "type": "string" },
          "end_date": { "type": "string" }
        }
      }
    },
    "certifications": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "issuer": { "type": "string" },
          "year": { "type": "string" }
        }
      }
    },
    "open_source_projects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "role": { "type": "string" },
          "description": { "type": "string" },
          "url": { "type": "string" },
          "bullets": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["text"],
              "properties": {
                "text": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
