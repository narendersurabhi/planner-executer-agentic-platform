{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CoverLetter",
  "type": "object",
  "additionalProperties": false,
  "required": ["full_name", "recipient", "subject", "body", "closing"],
  "properties": {
    "full_name": { "type": "string" },
    "headline": { "type": "string" },
    "location": { "type": "string" },
    "phone": { "type": "string" },
    "email": { "type": "string" },
    "date": { "type": "string" },
    "recipient": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "company"],
      "properties": {
        "name": { "type": "string" },
        "company": { "type": "string" },
        "title": { "type": "string" },
        "address": { "type": "string" }
      }
    },
    "subject": { "type": "string" },
    "body": {
      "type": "array",
      "items": { "type": "string" }
    },
    "closing": { "type": "string" },
    "signature": { "type": "string" },
    "links": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "linkedin_url": { "type": "string" },
        "github_url": { "type": "string" },
        "portfolio_url": { "type": "string" }
      }
    }
  }
}
